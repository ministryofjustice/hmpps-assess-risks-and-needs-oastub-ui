{
  "name": "hmpps-assess-risks-and-needs-oastub-ui",
  "version": "0.0.1",
  "description": "Hmpps Assess Risks And Needs Oastub Ui",
  "repository": "git@github.com:ministryofjustice/hmpps-assess-risks-and-needs-oastub-ui.git",
  "license": "MIT",
  "scripts": {
    "watch-ts": "tsc -w",
    "build": "node esbuild/esbuild.config.js --build",
    "start": "node $NODE_OPTIONS dist/server.js | bunyan -o short",
    "start:dev": "concurrently -k -p \"[{name}]\" -n \"ESBuild,Node\" -c \"yellow.bold,cyan.bold\" \"node esbuild/esbuild.config.js --build --watch\" \"node esbuild/esbuild.config.js --dev-server\"",
    "start-feature": "export $(cat feature.env) && node $NODE_DEBUG_OPTION dist/server.js | bunyan -o short",
    "start-feature:dev": "export $(cat feature.env) && concurrently -k -p \"[{name}]\" -n \"ESBuild,Node\" -c \"yellow.bold,cyan.bold\" \"node esbuild/esbuild.config.js --build --watch\" \"node esbuild/esbuild.config.js --dev-server\"",
    "record-build-info": "node ./bin/record-build-info",
    "lint": "eslint . --cache --max-warnings 0",
    "lint-fix": "eslint . --cache --max-warnings 0 --fix",
    "typecheck": "tsc",
    "test": "jest",
    "test:ci": "jest --runInBand",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "int-test": "cypress run --config video=false",
    "int-test-ui": "cypress open --e2e --browser chrome",
    "clean": "rm -rf dist build node_modules stylesheets",
    "rebuild": "npm run clean && npm i && npm run build",
    "setup": "npm ci && hmpps-npm-script-run-allowlist"
  },
  "engines": {
    "node": "^22",
    "npm": "^10"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "isolatedModules": true
        }
      ]
    },
    "collectCoverageFrom": [
      "server/**/*.{ts,js,jsx,mjs}"
    ],
    "testMatch": [
      "<rootDir>/(server|job)/**/?(*.)(cy|test).{ts,js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test_results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test_results/unit-test-reports.html"
        }
      ]
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "node",
      "ts"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      ".circleci/*",
      "migrations/*",
      "node_modules/*",
      "test/*",
      "cypress/*"
    ],
    "delay": 2500,
    "ext": "js,json,html,njk"
  },
  "lint-staged": {
    "*.{ts,js,css}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-sqs": "3.962.0",
    "@faker-js/faker": "9.9.0",
    "@ministryofjustice/frontend": "5.2.1",
    "@ministryofjustice/hmpps-auth-clients": "^0.0.3",
    "@ministryofjustice/hmpps-rest-client": "^0.0.3",
    "agentkeepalive": "^4.6.0",
    "applicationinsights": "3.12.1",
    "body-parser": "^2.2.0",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "compression": "^1.8.1",
    "connect-flash": "^0.1.1",
    "connect-redis": "^9.0.0",
    "csrf-sync": "^4.2.1",
    "express": "^5.2.1",
    "express-session": "^1.18.2",
    "govuk-frontend": "^5.13.0",
    "helmet": "^8.1.0",
    "http-errors": "^2.0.1",
    "jwt-decode": "^4.0.0",
    "lodash": "^4.17.21",
    "luxon": "3.7.2",
    "nocache": "^4.0.0",
    "nunjucks": "^3.2.4",
    "passport": "^0.7.0",
    "passport-oauth2": "^1.8.0",
    "redis": "5.10.0",
    "superagent": "^10.2.3",
    "url-value-parser": "^2.2.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@jgoz/esbuild-plugin-typecheck": "^4.0.4",
    "@ministryofjustice/eslint-config-hmpps": "^0.0.5",
    "@ministryofjustice/hmpps-npm-script-allowlist": "0.0.3",
    "@types/bunyan": "^1.8.11",
    "@types/bunyan-format": "^0.2.9",
    "@types/compression": "^1.8.1",
    "@types/connect-flash": "0.0.40",
    "@types/csurf": "^1.11.5",
    "@types/express-session": "^1.18.2",
    "@types/http-errors": "^2.0.5",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash": "^4.17.21",
    "@types/luxon": "3.7.1",
    "@types/node": "^22.19.3",
    "@types/nunjucks": "^3.2.6",
    "@types/passport": "^1.0.17",
    "@types/passport-oauth2": "1.8.0",
    "@types/superagent": "^8.1.9",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "audit-ci": "^7.1.0",
    "aws-sdk-client-mock": "^4.1.0",
    "chokidar": "^3.6.0",
    "concurrently": "9.2.1",
    "cypress": "15.8.1",
    "cypress-multi-reporters": "^2.0.5",
    "dotenv": "17.2.3",
    "esbuild": "0.27.2",
    "esbuild-plugin-clean": "^1.0.1",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-sass-plugin": "^3.3.1",
    "glob": "^11.1.0",
    "jest": "^30.2.0",
    "jest-html-reporter": "^4.3.0",
    "jest-junit": "^16.0.0",
    "jsonwebtoken": "^9.0.3",
    "lint-staged": "16.2.7",
    "mocha-junit-reporter": "^2.2.1",
    "nock": "14.0.10",
    "nodemon": "^3.1.11",
    "prettier": "3.7.4",
    "prettier-plugin-jinja-template": "^2.1.0",
    "sass": "1.97.1",
    "supertest": "7.1.4",
    "ts-jest": "29.4.6",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "@jgoz/esbuild-plugin-typecheck": {
      "esbuild": "$esbuild"
    }
  }
}
