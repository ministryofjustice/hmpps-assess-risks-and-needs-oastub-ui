{% extends "../partials/layout.njk" %}
{%- from "govuk/components/input/macro.njk" import govukInput -%}
{%- from "govuk/components/select/macro.njk" import govukSelect -%}
{%- from "govuk/components/button/macro.njk" import govukButton -%}
{%- from "moj/components/banner/macro.njk" import mojBanner -%}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% set hideBackLink = true %}

{% block header %}
  {% include "../partials/header.njk" %}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-three-quarters">
      <h1 class="govuk-heading-l">{{ options.pageTitle }}</h1>
      <form id="form" method="post" action="{{ action }}">
 
        {{ govukInput({
          label: {
            text: options.fields["given-name"].text,
            classes: "govuk-label--m"
          },
          id: options.fields["given-name"].code,
          name: options.fields["given-name"].code,
          hint: options.fields["given-name"].hint,
          value: givenName
        }) }}

        {{ govukInput({
          label: {
            text: options.fields["family-name"].text,
            classes: "govuk-label--m"
          },
          id: options.fields["family-name"].code,
          name: options.fields["family-name"].code,
          hint: options.fields["family-name"].hint,
          value:familyName
        }) }}

        {{ govukSelect({
          label: {
            text: options.fields["gender"].text,
            classes: "govuk-label--m"
          },
          id: options.fields["gender"].code,
          name: options.fields["gender"].code,
          hint: options.fields["gender"].hint,
          items: options.fields["gender"].options
        }) }}

        {{ govukSelect({
          label: {
            text: options.fields["sexually-motivated-offence-history"].text,
            classes: "govuk-label--m"
          },
          id: options.fields["sexually-motivated-offence-history"].code,
          name: options.fields["sexually-motivated-offence-history"].code,
          hint: options.fields["sexually-motivated-offence-history"].hint,
          items: options.fields["sexually-motivated-offence-history"].options
        }) }}

        {{ govukInput({
          label: {
            text: options.fields["oastub-assessment-uuid"].text,
            classes: "govuk-label--m"
          },
          id: options.fields["oastub-assessment-uuid"].code,
          name: options.fields["oastub-assessment-uuid"].code,
          hint: options.fields["oastub-assessment-uuid"].hint,
          value: oasysAssessmentPk
        }) }}
        {{ govukRadios({
          name: "app",
          fieldset: {
            legend: {
              text: "Project",
              isPageHeading: true,
              classes: "govuk-fieldset__legend--m"
            }
          },
          items: [
            {
              value:options.fields["san_url"].url,
              text: options.fields["san_url"].text,
              checked:'true'
            },
            {
              value:options.fields["sp_url"].url,
              text: options.fields["sp_url"].text
            }
          ]
        }) }}

        <div class="questiongroup-action-buttons">
          {{ govukButton({
              text: buttonText | default('Create one time link'),
              classes: 'govuk-!-margin-bottom-3 govuk-!-margin-right-1'
            }) }}
        </div>
      </form>
    </div>
  </div>
{% endblock %}

{% block bodyEnd %}{% endblock %}