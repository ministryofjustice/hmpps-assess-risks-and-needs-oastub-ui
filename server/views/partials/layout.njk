{% extends "govuk/template.njk" %}

{% block head %}
  <link href="/assets/css/app.css?{{ version }}" rel="stylesheet"/>
{% endblock %}

{% block pageTitle %}{{pageTitle | default(applicationName)}}{% endblock %}

{% block header %}
  {% if ephemeralDeploymentName %}
    <div class="ephemeral-env-banner">
      <span class="govuk-body">
        <u><strong>Notice</strong></u>:
        You are viewing an ephemeral deployment for <strong>{{ ephemeralDeploymentName }}</strong>.
      </span>
    </div>
  {% endif %}
  {% include "./header.njk" %}
{% endblock %}

{% block bodyStart %}
{% endblock %}

{% block bodyEnd %}
  <script type="module" src="/assets/js/app.js"></script>
{% endblock %}
